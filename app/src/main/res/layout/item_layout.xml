<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/item_slot_cart"
    android:layout_margin="@dimen/rc_item_margin"
    android:background="@drawable/shodow_back">

    <TextView
        android:id="@+id/item_slot_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="TextView"
        android:textColor="#4A4A4A"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="@dimen/rc_item_margin"
        android:typeface="sans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_slot_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/rc_item_margin"
        android:layout_marginEnd="@dimen/rc_item_margin"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_slot_description" />

    <TextView
        android:id="@+id/item_slot_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/rc_item_margin"
        android:text="TextView"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/item_slot_title"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/item_slot_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/rc_item_margin"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_slot_description" />

</androidx.constraintlayout.widget.ConstraintLayout>